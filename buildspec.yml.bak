version: 0.2

phases:
  pre_build:
    commands:
      - echo Logging in to Amazon ECR
      - aws --version
      - export REGION=us-east-2
      - export ECR_REGISTRY=971422717446.dkr.ecr.us-east-2.amazonaws.com
      - export REPOSITORY=room-detection-yolov8
      - export IMAGE_TAG=latest
      - export IMAGE_URI=${ECR_REGISTRY}/${REPOSITORY}:${IMAGE_TAG}
      - aws ecr get-login-password --region $REGION | docker login --username AWS --password-stdin $ECR_REGISTRY
      - echo Logging in to SageMaker base image ECR
      - aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 763104351884.dkr.ecr.us-east-1.amazonaws.com
  build:
    commands:
      - echo Build started
      - echo Building the Docker image
      - cd sagemaker
      - cp Dockerfile.inference Dockerfile
      - docker build --platform linux/amd64 -t ${REPOSITORY}:${IMAGE_TAG} .
      - docker tag ${REPOSITORY}:${IMAGE_TAG} ${IMAGE_URI}
  post_build:
    commands:
      - echo Build completed
      - echo Pushing the Docker image
      - docker push ${IMAGE_URI}
      - echo Image URI is ${IMAGE_URI}
